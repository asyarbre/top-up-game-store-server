<table id="example1" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>No</th>
      <th>Tipe Pemayaran</th>
      <th>Banks</th>
      <th>Status</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0; i<payment.length; i++){ %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= payment[i].type %></td>
        <td>
          <% payment[i].banks.forEach(bank=>{%>
          <span class="badge badge-warning"><%= bank.name %>-<%= bank.nameBank %>-<%= bank.noRekening %></span>
          <%})%>
        </td>
        <td>
          <% if(payment[i].status == "Y"){ %>
          <span class="badge badge-success">Aktif</span>
          <% }else{ %>
          <span class="badge badge-danger">Tidak Aktif</span>
          <% } %>
        </td>
        <td>
          <form action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="post">
            <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-warning"><i class="fas fa-pencil-alt mr-1"></i>Ubah</a>
            <button class="btn btn-danger"><i class="fas fa-trash mr-1"></i>Hapus</button>
          </form>
        </td>
      </tr>
      <% } %>
  </tbody>
</table>
